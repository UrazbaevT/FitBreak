<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Blue.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="Skip.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:text">@string/skip</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="Edit_Data.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:drawableEnd">@drawable/ic_edit_data</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:text">@string/edit_data</item>
        <item name="cornerRadius">20dp</item>
    </style>

</resources>